<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- estilo personalizado para los botones -->
    <style name="CustomButtonStyle">
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
        <style name="NoButtonTint">
            <item name="android:buttonTint">@null</item>
        </style>
    <style name="CircularImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ImageRoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <!-- Estilo general para los EditText -->
    <style name="CampoPerfil">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#DDDDDD</item>
        <item name="android:backgroundTint">#ffcc00</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Botones dorados con texto negro -->
    <style name="BotonDorado">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:backgroundTint">#ffcc00</item>
        <item name="android:textColor">#121212</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Botón negro para "Volver a Suscribirse" -->
    <style name="BotonOscuro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:backgroundTint">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Título con dorado y énfasis -->
    <style name="TituloPerfil">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffcc00</item>
        <item name="android:layout_marginTop">70dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Estilo para tarjetas redondeadas -->
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/colorCardBackground</item>
        <item name="android:foreground">@drawable/ripple_yellow</item>
    </style>

</resources>